#!/bin/bash

alias b="git branch -a"
alias e="exit"
alias g="git"
alias icat="kitty +kitten icat"
alias t="tree -C | less -R"
alias s="git status"
alias vim="$EDITOR"
alias v="$EDITOR"
alias ver="version"
alias ..="cd .."
alias vw="vim-which"
alias ci="gh run list"
alias lg="lazygit"
alias btop="bpytop"

if [ "$HORTA_OS" = "Darwin" ]; then
    alias l="ls"
    alias ll="ls -lah"
else
    alias l="ls --color=auto"
    alias ll="ls -lah --color=auto"
fi

if [ ! -z "$HORTA_TRASH_CMD" ]; then
    # https://apple.stackexchange.com/a/17637
    alias rm="echo Use 'del', or the full path i.e. '/bin/rm'"
    alias del="$HORTA_TRASH_CMD"
fi
